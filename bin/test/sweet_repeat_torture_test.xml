<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:jr="http://openrosa.org/javarosa">
    <h:head>
        <h:meta name="name" content="demo"/>
        <h:meta name="version" content="0.1"/>
        <h:title>Demo Form</h:title>

        <model>
            <instance>
                <x xmlns="drewstest">
                    <q/>

                    <children>
                        <child jr:template="">
                            <name/>
                            <age/>
                            <sex/>
                            <only_if_female/>
                            <only_if_q_A/>
                        </child>
                    </children>

                    <qq/>

                    <children2>
                        <child jr:template="">
                            <name/>
                            <age/>
                            <sex/>
                            <only_if_female/>
                            <only_if_q_A/>
                        </child>
                    </children2>

                    <qqq/>

                </x>

            </instance>

            <bind nodeset="children/child" relevant="/x/q != 'C'"/>
            <bind nodeset="children/child/age" type="int"/>
            <bind nodeset="children/child/only_if_female" relevant="../sex = 'F'"/>
            <bind nodeset="children/child/only_if_q_A" relevant="/x/q = 'A'"/>

            <bind nodeset="children2/child" relevant="count(/x/children/child) != 4"/>
            <bind nodeset="children2/child/age" type="int"/>
            <bind nodeset="children2/child/only_if_female" relevant="../sex = 'F'"/>
            <bind nodeset="children2/child/only_if_q_A" relevant="/x/q = 'A'"/>

        </model>
    </h:head>
    <h:body>

        <group>
            <label>imma group</label>
            <input ref="q">
                <label>filler q1</label>
            </input>
        </group>

        <group>
            <label>child</label>
            <repeat nodeset="children/child">
                <jr:mainHeader>Children in Household (<output value="$n"/>)
                </jr:mainHeader>
                <jr:addCaption>Add another
                    <output value="$name"/>
                </jr:addCaption>
                <jr:addEmptyCaption>None -- Add new
                    <output value="$name"/>
                </jr:addEmptyCaption>
                <jr:delCaption>Remove a
                    <output value="$name"/>
                </jr:delCaption>
                <jr:doneCaption>Finished</jr:doneCaption>
                <jr:doneEmptyCaption>Skip; no children</jr:doneEmptyCaption>
                <jr:chooseCaption>
                    <output
                        value="concat($i, ': ', if(./name, ./name, '--'), ' ', if(./age, ./age, '??'), '/', if(./sex, ./sex, '?'))"/>
                </jr:chooseCaption>

                <input ref="name">
                    <label>Child Name</label>
                </input>
                <input ref="age">
                    <label>Child Age</label>
                </input>
                <select1 ref="sex">
                    <label>Child Sex</label>
                    <item>
                        <label>Male</label>
                        <value>M</value>
                    </item>
                    <item>
                        <label>Female</label>
                        <value>F</value>
                    </item>
                </select1>
                <input ref="only_if_female">
                    <label>Shows only if female</label>
                </input>
                <input ref="only_if_q_A">
                    <label>Shows only when 1st question is A</label>
                </input>
            </repeat>
        </group>

        <input ref="qq">
            <label>filler q2</label>
        </input>

        <group>
            <label>Child</label>
            <repeat nodeset="children2/child">
                <input ref="name">
                    <label>Child Name</label>
                </input>
                <input ref="age">
                    <label>Child Age</label>
                </input>
                <select1 ref="sex">
                    <label>Child Sex</label>
                    <item>
                        <label>Male</label>
                        <value>M</value>
                    </item>
                    <item>
                        <label>Female</label>
                        <value>F</value>
                    </item>
                </select1>
                <input ref="only_if_female">
                    <label>Shows only if female</label>
                </input>
                <input ref="only_if_q_A">
                    <label>Shows only when 1st question is A</label>
                </input>
            </repeat>
        </group>

        <input ref="qqq">
            <label>filler q3</label>
        </input>

    </h:body>
</h:html>
